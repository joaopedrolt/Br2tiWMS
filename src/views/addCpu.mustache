{{>partials/heads/headAdd}}
<body>
    <div class="frame">
        {{>partials/menu}}
        <section class="section processadores-add">
                <div class="section-title">
                    <div class="logo-title"></div>
                    <div class="title">Add - Processador</div>
                </div>
                <div class="add-area">
                    <form class="add-form" method="post">
                        <input class="input-text-add" type="text" name="modelo" placeholder="Modelo" maxlength="15"/>
                        <input class="input-number-add" type="number" name="quantidade" placeholder="Quantidade" min="1" max="999"/>
                        <div class="gaveta">
                            <div class="gaveta-label">Gaveta</div>
                            <select name="gaveta">
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
                                <option value=4>4</option>
                                <option value=5>5</option>
                                <option value=6>6</option>
                                <option value=7>7</option>
                                <option value=8>8</option>
                                <option value=9>9</option>
                                <option value=10>10</option>
                                <option value=11>11</option>
                                <option value=12>12</option>
                            </select>
                        </div>
                        <div class="gaveta">
                            <div class="gaveta-label">NÃºcleos</div>
                            <select name="core">
                                <option value="Dual-Core">Dual-Core</option>
                                <option value="Quad-Core">Quad-Core</option>
                                <option value="Six-Core">Six-Core</option>
                                <option value="Octa-Core">Octa-Core</option>
                                <option value="Deca-Core">Deca-Core</option>
                        </div>
                        <button class="button-add" type="submit">Adicionar</button>
                    </form>
                </div>
                {{#error}}
                <div class="alert error">Preencha todos os Campos Corretamente!
                    <div class="close-alert">&#10006;</div>
                </div>
                {{/error}}
        </section>
    </div>
</body>
</html>